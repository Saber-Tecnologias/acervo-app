<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="14dp"
    android:paddingEnd="13dp"
    android:paddingLeft="13dp"
    android:paddingRight="13dp"
    android:paddingStart="13dp"
    android:paddingTop="14dp" >

    <TextView
        android:id="@+id/label_nome"
        android:layout_width="@dimen/dialogs_default_width"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:text="Nome do Grupo"
        android:textColor="@android:color/black"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/iv_close_2"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_toEndOf="@id/label_nome"
        android:layout_toRightOf="@id/label_nome"
        android:src="@drawable/ic_tag_close_all" />

    <EditText
        android:id="@+id/et_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/label_nome"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@id/label_nome"
        android:layout_below="@id/label_nome"
        android:hint="Nome" />

    <TextView
        android:id="@+id/label_cor"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/et_nome"
        android:layout_marginTop="25dp"
        android:gravity="center_vertical"
        android:text="Cor do Grupo"
        android:textColor="@android:color/black"
        android:textSize="17sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_cores"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignEnd="@id/iv_close_2"
        android:layout_alignRight="@id/iv_close_2"
        android:layout_below="@id/label_cor"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bt_criargrupo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_alignEnd="@id/iv_close_2"
		android:layout_alignRight="@id/iv_close_2"
        android:layout_below="@id/rv_cores"
        android:textAllCaps="false"
        android:text="Criar"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

</RelativeLayout>